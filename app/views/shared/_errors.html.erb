<% if object.errors.any? %>
    <section class="errors">
        <h2>
            Your submission could not be saved.
        </h2>
        <h3>
            Please revise the following errors:
        </h3>
        <ul>
            <% object.errors.full_messages.each do |m| %>
                <li><%= m %>
            <% end %>
        </ul>
    </section>
<% end %>